.product {
  .image {
    .quick-shop-btn {
      opacity: 0;
      position: absolute;
      top: 50%;
      left: 20%;
      z-index: 100;
      padding: 10px 15px;
      -webkit-transition: opacity 1s;
      -moz-transition: opacity 1s;
      -o-transition: opacity 1s;
      transition: opacity 1s;
    }
  }
  &:hover {
    .quick-shop-btn {
      opacity: 1;
      -webkit-transition: opacity 1s;
      -moz-transition: opacity 1s;
      -o-transition: opacity 1s;
      transition: opacity 1s;
    }
  }
}